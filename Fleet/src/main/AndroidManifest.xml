<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bestify.fleet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.bestify.fleet.StarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="BFleet"
        android:theme="@style/AppTheme">
        <activity android:name="com.bestify.fleet.PickAMessageActivity"></activity>
        <activity android:name="com.bestify.fleet.BeforeEmailActivity" />
        <activity android:name="com.bestify.fleet.WaitingToConfirmActivity" />

        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/parse_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/parse_client_key" />

        <activity
            android:name="com.bestify.fleet.MainActivity"
            android:label="BFleet"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bestify.fleet.UserListActivity" />
        <activity android:name="com.bestify.fleet.SendAMessageActivity" />
    </application>

</manifest>